<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-5 mt-8">

<!-- Dépense Énergétique Journalière -->
<div class="card flex flex-col items-center text-center p-4 bg-gray-900 rounded-lg hover:bg-gray-800 transition-all duration-300 ease-in-out h-32 md:h-40" onclick="dopamineEffect(this)">
    <i class="fas fa-utensils text-green-400 text-3xl mb-2"></i>
    <span id="dej" class="text-white text-lg font-semibold">500 kcal</span>
    <span class="text-gray-300 text-sm">Dépense Énergétique Journalière</span>
</div>


<!-- Carte Sous Chef -->
<div class="card flex flex-col items-center text-center p-4 bg-gray-900 rounded-lg hover:bg-gray-800 transition-all duration-300 ease-in-out cursor-pointer h-32 md:h-40" onclick="dopamineEffect(this); copyToClipboardAndNavigate()">
    <div class="flex items-center">
        <img src="https://is1-ssl.mzstatic.com/image/thumb/Purple126/v4/dd/68/98/dd6898cc-e743-cfba-cc7f-5832c029438a/AppIcon-0-1x_U007emarketing-0-7-0-85-220.png/512x512bb.jpg" alt="Character icon" class="rounded-full w-12 h-12">
        <div>
            <span class="text-yellow-400 text-lg font-semibold block">Sous Chef</span>
            <span class="text-gray-300 text-sm">Prenez une photo et je vous donnerai des recettes basées sur les aliments que vous aimez et les ingrédients que vous avez</span>
        </div>
    </div>
    <div class="hidden w-full bg-gray-800 rounded-full h-2.5">
        <div class="bg-blue-400 h-2.5 rounded-full" style="width: 55%"></div>
    </div>
</div>


<div class="container mx-auto p-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">

    <!-- Poids *-->
    <div id="weightCard" class="card flex flex-col items-center text-center p-4 bg-gray-900 rounded-lg hover:bg-gray-800 transition-transform transform hover:scale-105 duration-300 ease-in-out h-32 md:h-40" onclick="dopamineEffect(this)" aria-label="Poids: 70 kg">
        <i class="fas fa-weight text-orange-400 text-3xl mb-2" title="Poids"></i>
        <span id="displayedWeight" class="text-white text-lg font-semibold">70 kg</span>
        <span class="text-gray-300 text-sm">Poids</span>
    </div>
    
    <!-- Taille *-->
    <div id="heightCard" class="card flex flex-col items-center text-center p-4 bg-gray-900 rounded-lg hover:bg-gray-800 transition-transform transform hover:scale-105 duration-300 ease-in-out h-32 md:h-40" onclick="dopamineEffect(this)" aria-label="Taille: 175 cm">
        <i class="fas fa-ruler-vertical text-purple-400 text-3xl mb-2" title="Taille"></i>
        <span id="displayedHeight" class="text-white text-lg font-semibold">175 cm</span>
        <span class="text-gray-300 text-sm">Taille</span>
    </div>
    
    <!--= Métabolisme de Base au Repos -->
    <div class="card flex flex-col items-center text-center p-4 bg-gray-900 rounded-lg hover:bg-gray-800 transition-all duration-300 ease-in-out h-32 md:h-40" onclick="dopamineEffect(this)">
        <i class="fas fa-fire text-red-400 text-3xl mb-2"></i>
        <span id="bmr" class="text-white text-lg font-semibold">1500 kcal</span>
        <span class="text-gray-300 text-sm">Métabolisme de Base au Repos</span>
    </div>
    
    <!--* Niveau d'Activité Physique -->
    <div class="card flex flex-col items-center text-center p-4 bg-gray-900 rounded-lg hover:bg-gray-800 transition-transform transform hover:scale-105 duration-300 ease-in-out h-32 md:h-40" onclick="dopamineEffect(this)" aria-label="Niveau d'Activité Physique: 1,2">
        <i class="fas fa-running text-blue-400 text-3xl mb-2" title="Niveau d'Activité Physique"></i>
        <span id="nap" class="text-white text-lg font-semibold">1,2</span>
        <span class="text-gray-300 text-sm">Niveau d'Activité Physique</span>
    </div>

</div>

    <% if (isAuthenticated) { %>

        <%- include('../includes/Finances.ejs') %>        

        <!-- Taux de masse grasse -->
        <div class="hidden card flex flex-col items-center text-center p-4 bg-gray-900 rounded-lg hover:bg-gray-800 transition-all duration-300 ease-in-out h-32 md:h-40">
            <i class="fa fa-percentage text-red-400 text-3xl mb-2"></i>
            <span class="text-white text-lg font-semibold">0%</span>
            <span class="text-gray-300 text-sm">Taux de masse grasse</span>
        </div>

        <!-- BPM / Fréquence Cardiaque-->
        <div class="hidden card flex flex-col items-center text-center p-4 bg-gray-900 rounded-lg hover:bg-gray-800 transition-all duration-300 ease-in-out h-32 md:h-40" onclick="dopamineEffect(this)">
            <i class="fas fa-heart text-green-400 text-3xl mb-2"></i>
            <span class="text-white text-lg font-semibold">72 bpm</span>
            <span class="text-gray-300 text-sm">Fréquence Cardiaque</span>
        </div>

    <% } %>

</div>

<style>
@keyframes pulse {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.05);
    }
}
.card.clicked {
    animation: pulse 0.3s ease-in-out;
    background-color: #4ade80; /* Green 400 */
}
</style>

<script>
    function dopamineEffect(element) {
        element.classList.add('clicked');
        setTimeout(() => {
            element.classList.remove('clicked');
        }, 300);
    }

    function copyToClipboardAndNavigate() {
        const textToCopy = "Voici une photo de mon frigo. Que pourrais-je préparer ?";
        navigator.clipboard.writeText(textToCopy).then(function() {
            window.location.href = 'https://chatgpt.com/g/g-3VrgJ1GpH-sous-chef';
        }, function(err) {
            console.error('Could not copy text: ', err);
        });
    }
</script>






