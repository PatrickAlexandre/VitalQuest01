<header class="bg-gray-900 p-4 flex justify-between items-center main-header">
  <div class="flex items-center space-x-4 mr-4">
    <i class="fas fa-gamepad text-2xl"></i>
  </div>
  <div class="flex items-center space-x-4">
    <div class="relative">
      <i class="fas fa-bell text-xl"></i>
      <span class="absolute top-0 right-0 bg-red-600 text-xs rounded-full px-1">3</span>
    </div>
  </div>
  
  <div class="backdrop"></div>
  <button id="side-menu-toggle" class="ml-4">Menu</button>
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item main-header__title">
        <a class="<%= path === '/' ? 'active' : '' %>" href="/">VitalQuest</a>
      </li>
      <% if (isAuthenticated) { %>
        <% if (isAdmin) { %>
          <li class="main-header__item">
