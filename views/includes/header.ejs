          </li>
        <% } %>
        <li class="main-header__item">
          <a class="<%= path === '/routine' ? 'active' : '' %>" href="/routine">Miracle Morning</a>
        </li>
        <li class="main-header__item">
          <a class="<%= path === '/tubeform' ? 'active' : '' %>" href="/tubeform">Apprendre</a>
        </li>
      <% } %>
    </ul>
    <ul class="main-header__item-list">
      <% if (!isAuthenticated) { %>
        <li class="main-header__item">
          <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup"><i class="fas fa-user-plus"></i> S'inscrire</a>
        </li>
        <li class="main-header__item">
          <a class="<%= path === '/login' ? 'active' : '' %>" href="/login"><i class="fas fa-sign-in-alt"></i> Se connecter</a>
        </li>
      <% } else { %>
        <li class="main-header__item">
          <a class="<%= path === '/mypage' ? 'active' : '' %>" href="/mypage"><i class="fas fa-user"></i> Ma Page</a>
        </li>
