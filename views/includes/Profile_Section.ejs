<!-- 👤 Section du Profil -->
<div class="p-4 rounded-lg flex items-center space-x-4 bg-gray-800">
    <!-- 📸 Image de Profil -->
    <img title="Cliquez ici pour remplacer votre photo de profil" src="https://i.gifer.com/6Dg.gif" id="replaceableImage" class="rounded-full w-24 cursor-pointer" alt="🧬" onclick="captureImage()">
    <video id="camera" class="hidden" autoplay></video>
    <canvas id="canvas" class="hidden"></canvas>
    <img src="https://placehold.co/50x50" alt="Faction logo" class="hidden w-12 h-12"> <!-- 🔍 Placeholder Image (Hidden) -->
    
    <!-- 📝 Infos du Profil -->
    <div>
        <!-- 🔄 Sélecteur MBTI -->
        <select id="mbti-type" class="bg-gray-800 text-white border-gray-700 rounded px-2 py-1 mt-4 max-w-full" onchange="changeBackgroundColorAndTextColor()">
            <option value="default">Sélectionnez un type MBTI</option>
            <option value="ISTJ">🧠 Inspecteur ISTJ</option>
            <option value="ISFJ">💖 Protecteur ISFJ</option>
            <option value="INFJ">🌟 Conseiller INFJ</option>
            <option value="INTJ">🔬 Stratège INTJ</option>
            <option value="ISTP">🛠️ Virtuose ISTP</option>
            <option value="ISFP">🎨 Aventurier ISFP</option>
            <option value="INFP">🌈 Médiateur INFP</option>
            <option value="INTP">🔍 Logicien INTP</option>
            <option value="ESTP">⚡ Entrepreneur ESTP</option>
            <option value="ESFP">🎉 Artiste ESFP</option>
            <option value="ENFP">🔥 Champion ENFP</option>
            <option value="ENTP">💡 Visionnaire ENTP</option>
            <option value="ESTJ">📋 Directeur ESTJ</option>
            <option value="ESFJ">🤝 Consul ESFJ</option>
            <option value="ENFJ">🌞 Protagoniste ENFJ</option>
            <option value="ENTJ">🚀 Commandant ENTJ</option>
        </select>

        <!-- ✏️ Nom du Personnage -->
        <div class="flex items-center space-x-2 mb-2">
            <span id="character-name" class="font-bold text-pink-500 text-lg overflow-hidden transition-color" contenteditable="true">Johanna</span>
        </div>
        
        <!-- 📊 Conteneur du Pourcentage de Vie -->
        <div class="mt-2">
            <div class="relative w-full bg-gray-600 rounded">
                <div id="lifePercentage" class="bg-green-500 text-xs leading-none py-1 text-center text-white rounded overflow-hidden" style="width: 99%; white-space: nowrap;">
                    <span id="lifePercentageText">99%</span>
                </div>
            </div>
        </div>

        <!-- ℹ️ Informations Supplémentaires -->
        <div class="flex items-center space-x-4">
            <span class="text-yellow-400"><i class="fas fa-shield-alt"></i> 14565</span>
            <span class="flex items-center text-blue-400"><i class="fas fa-hourglass-half mr-2"></i><span id="displayed-age">0</span></span>
        </div>
    </div>
</div>
