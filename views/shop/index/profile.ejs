<div class="flex flex-col md:flex-row items-center mb-4">
    <div class="w-full md:w-1/3 flex items-center justify-center mb-4 md:mb-0">
        <div class="w-24 h-24 rounded-full overflow-hidden transition-transform transform hover:scale-105" aria-label="Profile picture">
            <img src="https://placehold.co/150x150" alt="Portrait of a man in a suit" class="w-full h-full object-cover">
        </div>
    </div>

    <div class="w-full md:w-1/3 flex items-center flex-col">
        <h1 class="text-lg font-bold mb-4 text-blue-600">Development Team</h1>
        <div class="grid grid-cols-4 gap-2">
            <div class="w-6 h-6 text-blue-500 hover:text-blue-700 transition-colors" aria-label="Ruler">
                <i class="fas fa-ruler-vertical"></i>
            </div>
            <div class="w-6 h-6 text-blue-500 hover:text-blue-700 transition-colors" aria-label="Weight">
                <i class="fas fa-weight"></i>
            </div>
            <div class="w-6 h-6 text-blue-500 hover:text-blue-700 transition-colors" aria-label="Settings">
                <i class="fas fa-cog"></i>
            </div>
            <div class="w-6 h-6 text-blue-500 hover:text-blue-700 transition-colors" aria-label="Lightbulb">
                <i class="fas fa-lightbulb"></i>
            </div>
            <div class="w-6 h-6 text-blue-500 hover:text-blue-700 transition-colors" aria-label="Heart">
                <i class="fas fa-heart"></i>
            </div>
            <div class="w-6 h-6 text-blue-500 hover:text-blue-700 transition-colors" aria-label="User">
                <i class="fas fa-user"></i>
            </div>
            <div class="w-6 h-6 text-blue-500 hover:text-blue-700 transition-colors" aria-label="Comments">
                <i class="fas fa-comments"></i>
            </div>
            <div class="w-6 h-6 text-blue-500 hover:text-blue-700 transition-colors" aria-label="Chart">
                <i class="fas fa-chart-line"></i>
            </div>
        </div>
    </div>

    <div class="w-full md:w-1/3">
        <%- include('./Statistiques.ejs') %>
    </div>
</div>
