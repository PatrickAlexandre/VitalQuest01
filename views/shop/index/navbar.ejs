<div class="flex justify-between items-center mb-4">
    <i class="fas fa-times text-xl"></i> <!-- ❌ Close icon -->
    <i class="fas fa-bell text-xl"></i> <!-- 🔔 Notification icon -->
    <i class="fas fa-home text-xl"></i> <!-- 🏠 Home icon -->
    <i id="user-icon" class="fas fa-user text-xl cursor-pointer"></i> <!-- 👤 User icon -->
    <i class="fas fa-bars text-xl"></i> <!-- 🍔 Menu icon -->
</div>

<!-- Pop-up alert -->
<div id="popup" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
    <div class="bg-white p-8 rounded shadow-lg text-center">
        <h2 class="text-2xl mb-4">Alert</h2>
        <p>This is an alert message.</p>
        <button id="close-popup" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded">Close</button>
    </div>
</div>

<script>
    document.getElementById('user-icon').addEventListener('click', function() {
        document.getElementById('popup').classList.remove('hidden');
    });

    document.getElementById('close-popup').addEventListener('click', function() {
        document.getElementById('popup').classList.add('hidden');
    });
</script>
