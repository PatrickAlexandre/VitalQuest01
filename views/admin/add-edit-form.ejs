<link rel="stylesheet" href="/css/product.css">
<script src="https://cdn.ckeditor.com/ckeditor5/35.4.0/classic/ckeditor.js"></script>
<style>
  .form-section {
    margin-bottom: 20px;
  }
  .form-section .uk-input, .form-section .uk-textarea {
    margin-top: 5px;
  }
  .action-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }
  .action-bar-title {
