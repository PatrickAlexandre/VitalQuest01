</style>
</head>
<script>
  function loadCKEditor() {
    ClassicEditor
      .create(document.querySelector('#editor'), {
        simpleUpload: {
          uploadUrl: '/upload-image',
        },
        ckfinder: {
          uploadUrl: '/admin/upload-image',
        }
      })
      .then((editor) => {
        window.ckeditor = editor;
      })
      .catch(error => {
        console.error(error);
      });
  }
</script>
